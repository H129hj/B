---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
	<div class="bg-cream py-12">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h1 class="text-center">Contactez-nous</h1>
			<p class="text-center text-xl mb-12">
				Une question ? N'hésitez pas à nous contacter
			</p>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<div class="bg-white rounded-xl shadow-lg p-8">
					<form id="contactForm" class="space-y-6">
						<div>
							<label for="name" class="block text-sm font-medium text-brown-700">
								Nom complet
							</label>
							<input
								type="text"
								id="name"
								name="name"
								required
								class="mt-1 block w-full rounded-md border-brown-300 shadow-sm focus:border-green-500 focus:ring-green-500"
							/>
						</div>

						<div>
							<label for="email" class="block text-sm font-medium text-brown-700">
								Email
							</label>
							<input
								type="email"
								id="email"
								name="email"
								required
								class="mt-1 block w-full rounded-md border-brown-300 shadow-sm focus:border-green-500 focus:ring-green-500"
							/>
						</div>

						<div>
							<label for="subject" class="block text-sm font-medium text-brown-700">
								Sujet
							</label>
							<select
								id="subject"
								name="subject"
								required
								class="mt-1 block w-full rounded-md border-brown-300 shadow-sm focus:border-green-500 focus:ring-green-500"
							>
								<option value="">Choisissez un sujet</option>
								<option value="commande">Question sur une commande</option>
								<option value="produits">Renseignements produits</option>
								<option value="pro">Contact professionnel</option>
								<option value="autre">Autre</option>
							</select>
						</div>

						<div>
							<label for="message" class="block text-sm font-medium text-brown-700">
								Message
							</label>
							<textarea
								id="message"
								name="message"
								rows="4"
								required
								class="mt-1 block w-full rounded-md border-brown-300 shadow-sm focus:border-green-500 focus:ring-green-500"
							></textarea>
						</div>

						<div>
							<button
								type="submit"
								class="w-full bg-green-700 text-white px-6 py-3 rounded-full hover:bg-green-800 transition-colors"
							>
								Envoyer le message
							</button>
						</div>
					</form>
				</div>

				<div class="space-y-8">
					<div class="bg-white rounded-xl shadow-lg p-8">
						<h2 class="text-2xl font-display mb-4">Nos Coordonnées</h2>
						<div class="space-y-4">
							<p>
								<strong class="block text-brown-900">Adresse</strong>
								<span class="text-brown-700">123 Route du Moulin<br/>75001 Paris</span>
							</p>
							<p>
								<strong class="block text-brown-900">Téléphone</strong>
								<a href="tel:0123456789" class="text-brown-700 hover:text-green-700">01 23 45 67 89</a>
							</p>
							<p>
								<strong class="block text-brown-900">Email</strong>
								<a href="mailto:contact@moulinsdelariviere.fr" class="text-brown-700 hover:text-green-700">
									contact@moulinsdelariviere.fr
								</a>
							</p>
						</div>
					</div>

					<div class="bg-white rounded-xl shadow-lg p-8">
						<h2 class="text-2xl font-display mb-4">Horaires d'ouverture</h2>
						<div class="space-y-2">
							<p class="flex justify-between">
								<span class="text-brown-900">Lundi - Vendredi</span>
								<span class="text-brown-700">9h - 18h</span>
							</p>
							<p class="flex justify-between">
								<span class="text-brown-900">Samedi</span>
								<span class="text-brown-700">9h - 12h</span>
							</p>
							<p class="flex justify-between">
								<span class="text-brown-900">Dimanche</span>
								<span class="text-brown-700">Fermé</span>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>

<script>
	document.getElementById('contactForm').addEventListener('submit', (e) => {
		e.preventDefault();
		
		// Simuler l'envoi du formulaire
		const submitButton = e.target.querySelector('button[type="submit"]');
		const originalText = submitButton.textContent;
		
		submitButton.disabled = true;
		submitButton.textContent = 'Envoi en cours...';
		
		setTimeout(() => {
			alert('Votre message a bien été envoyé. Nous vous répondrons dans les plus brefs délais.');
			e.target.reset();
			submitButton.disabled = false;
			submitButton.textContent = originalText;
		}, 1500);
	});
</script>